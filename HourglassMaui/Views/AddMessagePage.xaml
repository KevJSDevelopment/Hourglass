<!-- HourglassMaui/Views/AddMessagePage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HourglassMaui.Views.AddMessagePage"
             Title="Add Message">
    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="Add New Motivational Message" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
        <Entry Placeholder="Enter Message" Text="{Binding NewMessage}" WidthRequest="300" />
        <Button Text="Save" Command="{Binding SaveCommand}" WidthRequest="150" HorizontalOptions="Center" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" WidthRequest="150" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>